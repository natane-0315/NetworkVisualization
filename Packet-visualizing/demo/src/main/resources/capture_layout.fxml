<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<BorderPane prefHeight="650.0" 
            prefWidth="800.0" 
            xmlns="http://javafx.com/javafx/17" 
            stylesheets="@styles.css" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.example.CaptureController">

            <top>
        <VBox spacing="10">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            
            <Label text="デジタル・バイタルサイン分析システム" alignment="CENTER" maxWidth="Infinity">
                <font><Font size="20.0" /></font>
            </Label>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="ネットワークデバイス:"/>
                <ComboBox fx:id="nifComboBox" prefWidth="400.0"/>
                <Button fx:id="startButton" text="キャプチャ開始" onAction="#startCapture" styleClass="custom-button"/>
                <Button fx:id="stopButton" text="キャプチャ停止" onAction="#stopCapture" styleClass="custom-button"/>
            </HBox>

            <Separator/>
        </VBox>
    </top>

    <center>
        <VBox alignment="CENTER">
            <ImageView fitWidth="130" preserveRatio="true">
                <image>
                    <Image url="@/male.png"/>
                </image>
            </ImageView>
        </VBox>
    </center>


    <left>
        <VBox spacing="10">
            <BorderPane.margin><Insets top="10" right="10" bottom="10" left="10" /></BorderPane.margin>
            
            <Label text="富の集中度 (エントロピー E):"  styleClass= "text" />
            <Label fx:id="entropyLabel" text="0.00"  styleClass= "textBox"><font><Font size="16.0" /></font></Label>
            <Label text="密輸率 (M):"  styleClass= "text"/>
            <Label fx:id="smugglingRateLabel" text="0.00%"  styleClass= "textBox"><font><Font size="16.0" /></font></Label>
            <Label text="脈拍 (最大レート R):" styleClass= "text"/>
            <Label fx:id="pulseRateLabel" text="データなし" styleClass= "textBox"><font><Font size="16.0" /></font></Label>

        </VBox>
    </left>
    
    <right>
        <VBox spacing="10" prefWidth="300.0">
            
            <BorderPane.margin><Insets top="10" right="10" bottom="10" left="10" /></BorderPane.margin>

            <Label text="ログ / 警告:"/>
            <TextArea fx:id="logArea" editable="false" prefHeight="20" VBox.vgrow="ALWAYS" HBox.hgrow = "ALWAYS" /><!-- -->
        
        </VBox>
    </right>

</BorderPane>